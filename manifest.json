{
    "manifest_version": 3,
    "name": "Focus Mode Activity Tracker",
    "version": "1.0",
    "description": "Track the current tab's domain and log the time spent.",
    "permissions": [
      "tabs",
      "notifications",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
    "48": "icons/warning.png"
    },
    "options_ui": {
      "page": "setting.html",
      "open_in_tab": true
    }
}
  