{
    "manifest_version": 3,
    "name": "Focus Mode Activity Tracker",
    "version": "1.0",
    "description": "Track time spent on each tab to create more awareness on the amount time you spent browsing internet",
    "permissions": [
      "tabs",
      "notifications",
      "storage",
      "alarms"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
    "48": "icons/warning.png"
    },
    "options_ui": {
      "page": "setting.html",
      "open_in_tab": true
    }
}
  